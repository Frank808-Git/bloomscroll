{
	"manifest_version": 3,
	"name": "DoomScrolling",
	"version": "1.0.0",
	"description": "Anti DoomScrolling Application",
	"action": {
		"default_popup": "index.html"
	},
	"permissions": ["storage", "tabs"],
	"host_permissions": ["<all_urls>", "https://api.stripe.com/"],
	"content_security_policy": {
		"extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
	}
}
